<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/emagemage"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/Ibutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/Ibutton"
        android:layout_width="114dp"
        android:layout_height="79dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="20dp"
        android:text="Your Move : "
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emagemage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="142dp"
        android:layout_height="64dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Your move"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ibutton"
        app:layout_constraintTop_toBottomOf="@+id/emagemage" />

    <TextView
        android:id="@+id/my_text"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:text="My Move:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ibutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.346"
        tools:layout_editor_absoluteX="87dp" />

    <TextView
        android:id="@+id/my_move"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:text="My Move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ibutton"
        app:layout_constraintVertical_bias="0.352"
        tools:layout_editor_absoluteX="253dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="293dp"
        android:layout_height="62dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="31dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_text" />

</androidx.constraintlayout.widget.ConstraintLayout>